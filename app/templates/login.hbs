<div class="logInForm">
	<h2>Log In</h2>
	
	<form>
		<div class="form-group">
			{{input type="email" value=email placeholder="Email" id="logInForm__email"}}
		</div>

		<div class="form-group">
			{{input type="password" value=password placeholder="Password" id="logInForm__password"}}	
		</div>

		<div class="form-group">
			<button {{action 'logIn'}}>Log In</button>
		</div>

		<div class="form-group">
			{{#if formErrors}}
			<ul>
				{{#each formErrors as |error|}}
					<li>{{error}}</li>
				{{/each}}
			</ul>
			{{/if}}		
		</div>

		<div class="form-link">
			{{#link-to 'signup'}}Sign Up Here{{/link-to}}
		</div>
	</form>

</div>
{{outlet}}
