<div class="signUpForm">
	<h2>Sign Up</h2>
	
	<form>
		<div class="form-group">
			{{input type="email" value=email placeholder="Email" id="signUpForm__email" key-up="validateEmail"}}
			<label for="logInForm__email">{{if emailIsValid "" emailErrors}}</label>
		</div>

		<div class="form-group">
			{{input type="password" value=password placeholder="Password" id="signUpForm__password" key-up="validatePassword"}}	
			<label for="logInForm__password">{{if passwordIsValid "" passwordErrors}}</label>
		</div>

		<div class="form-group">
			<button {{action 'createUser'}}>Sign Up</button>
		</div>

		<div class="form-group">
			{{#if formErrors}}
			<ul>
				{{#each formErrors as |error|}}
					<li>{{error}}</li>
				{{/each}}
			</ul>
			{{/if}}		
		</div>

		<div class="form-link">
			{{#link-to 'login'}}Log In Here{{/link-to}}
		</div>
	</form>

</div>

{{outlet}}
